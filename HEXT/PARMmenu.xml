<?xml version="1.0" encoding="UTF-8"?>


<menuDocument>
  <menu>
	<subMenu id="lz_parm_submenu">
	<label>LZ</label>
	
		<scriptItem id="promote_parm">
		  <label>Promote Parm</label>
		  <scriptCode><![CDATA[
import lzutil
p = kwargs['parms'][0]
lzutil.promoteParm(p)
	]]>
	</scriptCode>
		</scriptItem>

	<scriptItem id="hide_parm">
		  <label>Hide Parm</label>
		  <scriptCode><![CDATA[
import lzutil
p = kwargs['parms'][0]
p.hide(1)
	]]>
	</scriptCode>
		</scriptItem>

		<scriptItem id="dublicate_parm">
		  <label>Dublicate Parm</label>
		  <scriptCode><![CDATA[
import lzutil
p = kwargs['parms'][0]
lzutil.dublicateParm(p)
	]]>
	</scriptCode>
		</scriptItem>		

		<scriptItem id="asCode">
		  <label>As Code to Clipboard</label>
		  <scriptCode><![CDATA[
import lzutil
p = kwargs['parms'][0]
lzutil.copyToClipboard(p.parmTemplate().asCode())
	]]>
	</scriptCode>
		</scriptItem>

<!-- Turn our float ramp into color ramp -->
		<scriptItem id="color_ramp">
		  <label>Color Ramp</label>
		  <expression>
return kwargs.get('parms',None)[0].parmTemplate().type().name() == 'Ramp'
</expression>
		  <scriptCode><![CDATA[
import lzutil
p = kwargs['parms'][0]
lzutil.changeRampType(p)
	]]>
	</scriptCode>
		</scriptItem>

<!-- Open File Location -->
		<scriptItem id="open in explorer">
		  <label>Open in Explorer</label>
		  <expression>
return kwargs.get('parms',None)[0].parmTemplate().type().name() == 'String'
</expression>
		  <scriptCode><![CDATA[
import lzutil
filepath = kwargs['parms'][0].eval()
lzutil.openInExplorer(filepath)
	]]>
	</scriptCode>
		</scriptItem>

<!-- Rename folder -->
		<scriptItem id="rename folder">
		  <label>Rename Folder</label>
		  <expression>
return kwargs.get('parms',None)[0].parmTemplate().type().name() == 'FolderSet'
</expression>
		  <scriptCode><![CDATA[
import lzutil
lzutil.renameFolderParm(kwargs.get('parms',None)[0])
	]]>
	</scriptCode>
		</scriptItem>
		
		
		
		
		
	</subMenu>	
  </menu>
</menuDocument>